    /* pages/mytrips/mytrips.wxss */
    swiper{
        width: 750rpx;
        height: 400rpx;
    }

    .swiper-image{
        width: 100%;
        height: 100%;
    }

    .avatar-container{
        display: flex;
        align-items: center;
        justify-content: flex-end;
    }

    .detail-row {
        display: flex;
    }

    .trip {
        border-radius: 25rpx;
        padding-top: 20rpx;
    }

    .trip-detail{
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .mytrips-heading{
        position: absolute;
        left: 50rpx;
        font-style: italic;
        font-weight: bold;
    }

    .action{
        width: 100%;
        
    }
    .nav-container{
        display: flex;
    }
    .nav-container swiper{
        width: 200rpx;
    }

    .fee{
        font-style: italic;
    }

    .cur{
        width: 8rpx;
        
        border-radius: 10rpx 0 0 10rpx;
        position: absolute;
        background-color: currentColor;
        top: 0;
        right: 0rpx;
        bottom: 0;
        margin: auto;
    }
    .nav .cu-item {
        margin: unset;
        padding: unset;
        text-align: center;
    }